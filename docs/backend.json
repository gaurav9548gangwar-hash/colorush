
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (same as Firebase Auth UID)."
        },
        "phone": {
          "type": "string",
          "description": "User's phone number (used for authentication)."
        },
        "emailId": {
          "type": "string",
          "description": "Unique email-like ID for the user (e.g., user123@tiranga.in)."
        },
        "balance": {
          "type": "number",
          "description": "User's wallet balance."
        },
        "name": {
          "type": "string",
          "description": "User's name."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user account was created."
        },
        "password": {
          "type": "string",
          "description": "Base64 encoded password, for admin verification only. Not for login."
        },
        "initialDeposit": {
          "type": "number"
        },
        "targetBalance": {
          "type": "number"
        },
        "inWinningPhase": {
          "type": "boolean"
        },
        "betsSinceLastWin": {
          "type": "number"
        },
        "referralCode": {
          "type": "string",
          "description": "The user's unique referral code to share with others."
        },
        "referredBy": {
            "type": "string",
            "description": "The UID of the user who referred this user."
        },
        "depositCount": {
            "type": "number",
            "description": "The number of deposits made by the user."
        },
        "isAdmin": {
          "type": "boolean",
          "description": "Flag to indicate if the user has administrative privileges."
        },
        "referralBonus": {
          "type": "number",
          "description": "Total bonus earned from referrals."
        }
      },
      "required": ["id", "phone", "emailId", "balance", "createdAt", "referralCode", "depositCount", "referralBonus"]
    },
     "DepositRequest": {
      "title": "Deposit Request",
      "type": "object",
      "description": "Represents a user's request to deposit funds.",
      "properties": {
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "transactionId": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "userName", "amount", "transactionId", "status", "createdAt"]
    },
    "WithdrawalRequest": {
      "title": "Withdrawal Request",
      "type": "object",
      "description": "Represents a user's request to withdraw funds.",
      "properties": {
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "upiId": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "userName", "amount", "upiId", "status", "createdAt"]
    },
    "Notification": {
      "title": "Notification",
      "type": "object",
      "description": "Represents a notification sent to all users.",
      "properties": {
        "title": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["title", "message", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles. Path-based ownership ensures data privacy."
    },
    "/deposits/{depositId}": {
      "schema": { "$ref": "#/entities/DepositRequest" },
      "description": "Stores user deposit requests. Admins can manage these."
    },
    "/withdrawals/{withdrawalId}": {
      "schema": { "$ref": "#/entities/WithdrawalRequest" },
      "description": "Stores user withdrawal requests. Admins can manage these."
    },
    "/notifications/{notificationId}": {
      "schema": { "$ref": "#/entities/Notification" },
      "description": "Stores notifications sent to all users."
    }
  }
}
