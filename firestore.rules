
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default rule: Allow read and write access for any authenticated user.
    // This is a simple and permissive rule for development.
    // For production, you would implement more granular security.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
