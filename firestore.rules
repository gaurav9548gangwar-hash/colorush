
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // #################################
    //       HELPER FUNCTIONS
    // #################################

    // Checks if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Checks if the user's document has the isAdmin flag set to true
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Checks if the authenticated user is the owner of a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // #################################
    //        COLLECTION RULES
    // #################################

    // --- Users Collection ---
    match /users/{userId} {
      // READ: An admin can list/read any user. A user can only read their own document.
      allow list: if isAdmin();
      allow get: if isOwner(userId) || isAdmin();
      
      // WRITE: A user can create their own document. An admin can update any user document. A user can update their own.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      
      // DELETE: Only an admin can delete a user document.
      allow delete: if isAdmin();
    }
    
    // --- Bets Collection ---
    match /bets/{betId} {
      // READ: An admin can list/read all bets. A user can only read bets where their userId matches.
      allow get: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow list: if isAdmin() || (request.query.where.field == "userId" && request.query.where.value == request.auth.uid);
      
      // WRITE: A user can only create a bet for themselves.
      allow create: if isOwner(request.resource.data.userId);
      
      // UPDATE/DELETE: Only admin can update or delete bets. Game logic updates are handled by admin/backend logic.
      allow update, delete: if isAdmin();
    }

    // --- Game Rounds Collection ---
    match /game_rounds/{roundId} {
      // READ: Any authenticated user can read game results.
      allow list, get: if isAuthenticated();
      
      // WRITE: Only an admin can write/create game results. This prevents players from manipulating outcomes.
      allow create, update, delete: if isAdmin();
    }

    // --- Deposits Collection ---
    match /deposits/{depositId} {
      // READ: Admin can list all deposits. A user can only list/get their own deposits.
      allow get: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow list: if isAdmin() || (request.query.where.field == "userId" && request.query.where.value == request.auth.uid);

      // WRITE: A user can create their own deposit request. Only admin can update (approve/reject).
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
    }

    // --- Withdrawals Collection ---
    match /withdrawals/{withdrawalId} {
      // READ: Admin can list all withdrawals. A user can only list/get their own withdrawals.
      allow get: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow list: if isAdmin() || (request.query.where.field == "userId" && request.query.where.value == request.auth.uid);
      
      // WRITE: A user can create their own withdrawal request. Only admin can update (approve/reject).
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
    }
    
    // --- Notifications Collection ---
    match /notifications/{notificationId} {
        // READ: Any authenticated user can read notifications.
        allow list, get: if isAuthenticated();
        
        // WRITE: Only an admin can create, update, or delete notifications.
        allow create, update, delete: if isAdmin();
    }

  }
}
