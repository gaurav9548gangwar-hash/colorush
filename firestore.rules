
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // This function should be updated with your actual admin logic,
    // e.g., checking a custom claim. For now, we allow any authenticated user
    // to have admin-like list access for the admin panel to work.
    // In a real app, you'd have a secure way to identify admins.
    function isAdmin() {
      // WARNING: In a real app, this should check for an admin custom claim.
      // E.g., return request.auth.token.admin == true;
      // For this app's purpose, we allow any authenticated user for the admin panel.
      return request.auth != null;
    }

    match /deposits/{depositId} {
      allow get: if request.auth.uid == resource.data.userId || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
      allow delete: if false; 
    }

     match /withdrawals/{withdrawalId} {
      allow get: if request.auth.uid == resource.data.userId || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
      allow delete: if false;
     }
    
    match /users/{userId} {
      // A user can create their own profile.
      allow create: if isOwner(userId);
      // A user can delete their own profile.
      allow delete: if isOwner(userId);
      // A user can only read and update their own profile. Admin can read/update any.
      allow read, update: if isOwner(userId) || isAdmin();
      // Admin can list all users.
      allow list: if isAdmin();
    }
    
    match /bets/{betId} {
      // Users can create their own bets.
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // Users can only READ their own bets. Admin can read any bet.
      allow read: if resource.data.userId == request.auth.uid || isAdmin();

      // Users can LIST their own bets. Admin can list all bets.
      allow list: if (request.auth != null && request.query.where[0][2] == request.auth.uid) || isAdmin();
      
      // Direct updates and deletes by users are not allowed.
      allow update, delete: if false;
    }

    match /game_rounds/{gameId} {
      // Game rounds are public information.
      allow read: if true;
      // In a production app, writes should be locked down to a trusted server environment.
      // For this app, we allow any authenticated user to create game results for simplicity.
      allow write: if isAdmin();
    }
  }
}
