
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Collection Group query for game logic to find the winning color.
    // Allows any authenticated user to list bets across all users.
    match /{path=**}/bets/{betId} {
      allow list: if request.auth != null;
    }

    match /deposits/{depositId} {
      allow get: if request.auth.uid == resource.data.userId;
      allow list: if request.auth != null && request.query.where[0][2] == request.auth.uid;
      allow create: if request.auth.uid == request.resource.data.userId;
      // Admin write access is implicitly handled by backend logic/trusted environment
      allow update, delete: if false; 
    }

     match /withdrawals/{withdrawalId} {
      allow get: if request.auth.uid == resource.data.userId;
      allow list: if request.auth != null && request.query.where[0][2] == request.auth.uid;
      allow create: if request.auth.uid == request.resource.data.userId;
       // Admin write access is implicitly handled by backend logic/trusted environment
      allow update, delete: if false;
     }
    
    match /users/{userId} {
      // A user can create their own profile.
      allow create: if isOwner(userId);
      // A user can delete their own profile.
      allow delete: if isOwner(userId);
      // A user can only read and update their own profile (e.g. balance)
      allow read, update: if isOwner(userId);

      // This rule ensures a user can only access their own subcollections.
      match /bets/{betId} {
        // A user can get, create, update, and delete their own specific bets.
        // The collection group rule above handles the cross-user 'list' query for game logic.
        allow get, write: if isOwner(userId);
      }
    }
    
    // Legacy collections - block all client access
    match /roles_admin/{adminId} {
      allow read, write: if false;
    }

    match /game_rounds/{gameId} {
      // Game rounds are public information.
      allow read: if true;
      // In a production app, writes should be locked down to a trusted server environment.
      // For this app, we allow client-side creation of game results from the game logic.
      allow write: if request.auth != null;
    }
  }
}
