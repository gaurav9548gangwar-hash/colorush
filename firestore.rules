
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Collection Group query for game logic to find the winning color.
    // Allows any authenticated user to list bets across all users.
    match /{path=**}/bets/{betId} {
      allow list: if request.auth != null;
    }

    match /deposits/{depositId} {
      // Users can only read their own deposits. Admin can write to any.
      allow get: if request.auth.uid == resource.data.userId;
      allow list: if request.query.where.userId == request.auth.uid;
      allow write: if true; // Allows admin to approve/reject
      allow create: if request.auth.uid == request.resource.data.userId;
    }

     match /withdrawals/{withdrawalId} {
      // Users can only read their own withdrawals. Admin can write to any.
      allow get: if request.auth.uid == resource.data.userId;
      allow list: if request.query.where.userId == request.auth.uid;
      allow write: if true; // Allows admin to approve/reject
      allow create: if request.auth.uid == request.resource.data.userId;
     }

     // Admin can read all user data for the panel
     match /users/{document=**} {
       allow read, write: if true;
     }

    match /users/{userId} {
      // A user can create their own profile.
      allow create: if isOwner(userId);
      // A user can delete their own profile.
      allow delete: if isOwner(userId);
      // A user can only update their own profile (e.g. balance)
      allow update: if isOwner(userId);

      // This rule ensures a user can only access their own subcollections.
      // The collection group rule above handles the cross-user query for game logic.
      match /bets/{betId} {
        // A user can read and manage their own specific bets.
        allow get, write: if isOwner(userId);
      }
    }
    
    // Legacy collections - block all client access
    match /roles_admin/{adminId} {
      allow read, write: if false;
    }

    match /game_rounds/{gameId} {
      // Game rounds are public information. Any client can create a new game
      // round result, and anyone can read it. In a production app, writes
      // should be locked down to a trusted server environment.
      allow read: if true;
      allow write: if true;
    }
  }
}
