
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Checks if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check ownership.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // A user can create their own profile.
      allow create: if isOwner(userId);
      
      // Any authenticated user can read or list user data.
      allow read, list: if isAuthenticated();
      
      // Any authenticated user can update any user's data (for balance updates by admin).
      allow update: if isAuthenticated();
      
      // Any authenticated user (admin) can delete a user.
      allow delete: if isAuthenticated();
    }

    match /deposits/{depositId} {
      // Any authenticated user can create, read, update, or list deposit requests.
      allow create, read, list, update: if isAuthenticated();
      allow delete: if false; // Maintain history
    }

     match /withdrawals/{withdrawalId} {
      // Any authenticated user can create, read, update, or list withdrawal requests.
      allow create, read, list, update: if isAuthenticated();
      allow delete: if false; // Maintain history
     }
    
    match /bets/{betId} {
      // Any authenticated user can manage bets.
      allow read, write, list: if isAuthenticated();
      allow delete: if false; // Maintain history
    }

    match /game_rounds/{gameId} {
      // Any authenticated user can read or write game results.
      allow read, write: if isAuthenticated();
    }
  }
}
