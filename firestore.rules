
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default rule: Allow read and write access to all documents
    // for any authenticated user. This is a simple rule to prevent all
    // permission errors as requested by the user.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
