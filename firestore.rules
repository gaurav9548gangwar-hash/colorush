
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // #################################
    //       HELPER FUNCTIONS
    // #################################

    // Checks if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Checks if the user's document has the isAdmin flag set to true
    function isAdmin() {
      // Ensure user is authenticated before trying to access their data
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Checks if the authenticated user is the owner of a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // #################################
    //        COLLECTION RULES
    // #################################

    // --- Users Collection ---
    match /users/{userId} {
      // An admin can read any user's document.
      // A user can always read their own document.
      allow get: if isAdmin() || isOwner(userId);
      
      // An admin can list all users. Regular users cannot.
      allow list: if isAdmin();
      
      // A user can create their own document.
      // An admin can update any user document. A user can update their own.
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
      
      // Only an admin can delete a user document.
      allow delete: if isAdmin();
    }
    
    // --- Bets Collection ---
    match /bets/{betId} {
      // An admin can read any bet. A user can only read their own bets.
      allow get: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Admin can list all bets. A user can list their own bets using a query.
      allow list: if isAdmin() || (isAuthenticated() && request.query.where.field == "userId" && request.query.where.value == request.auth.uid);
      
      // A user can only create a bet for themselves.
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Only admin can update or delete bets. Game logic updates are handled by admin/backend logic.
      allow update, delete: if isAdmin();
    }

    // --- Game Rounds Collection ---
    match /game_rounds/{roundId} {
      // Any authenticated user can read game results.
      allow get, list: if isAuthenticated();
      
      // Only an admin (or the backend function acting as one) can write game results.
      allow create, update, delete: if isAdmin();
    }

    // --- Deposits Collection ---
    match /deposits/{depositId} {
      // Admin can read any deposit. A user can read their own.
      allow get: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);

      // Admin can list all deposits. A user can list their own.
      allow list: if isAdmin() || (isAuthenticated() && request.query.where.field == "userId" && request.query.where.value == request.auth.uid);

      // A user can create their own deposit request.
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Only an admin can update (approve/reject) or delete.
      allow update, delete: if isAdmin();
    }

    // --- Withdrawals Collection ---
    match /withdrawals/{withdrawalId} {
      // Admin can read any withdrawal. A user can read their own.
      allow get: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Admin can list all withdrawals. A user can list their own.
      allow list: if isAdmin() || (isAuthenticated() && request.query.where.field == "userId" && request.query.where.value == request.auth.uid);
      
      // A user can create their own withdrawal request.
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Only an admin can update (approve/reject) or delete.
      allow update, delete: if isAdmin();
    }
    
    // --- Notifications Collection ---
    match /notifications/{notificationId} {
        // Any authenticated user can read notifications.
        allow get, list: if isAuthenticated();
        
        // Only an admin can create, update, or delete notifications.
        allow create, update, delete: if isAdmin();
    }

  }
}
