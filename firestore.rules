
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // WARNING: INSECURE RULE - This allows anyone to read and write to your entire database.
    // This is a temporary solution to make the admin panel work on Vercel without a proper
    // authentication system for the admin.
    // A secure implementation should be put in place as soon as possible.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
