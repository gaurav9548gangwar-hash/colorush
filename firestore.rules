
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Checks if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function: Checks if the user is the owner of a specific document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Allow broad access for any authenticated user.
    // This is NOT recommended for production but will prevent permission errors.
    function allowAllAuthenticated() {
      return isAuthenticated();
    }

    match /users/{userId} {
      // A user can create their own profile.
      allow create: if isOwner(userId);
      
      // Any authenticated user can read, update, or delete any user's data.
      allow read, update, delete, list: if allowAllAuthenticated();
    }

    match /deposits/{depositId} {
      // Any authenticated user can create, read, update, or list deposit requests.
      allow create: if isOwner(request.resource.data.userId); // User can only create for themselves
      allow read, update, list: if allowAllAuthenticated();
      allow delete: if false; // Maintain history
    }

     match /withdrawals/{withdrawalId} {
      // Any authenticated user can create, read, update, or list withdrawal requests.
      allow create: if isOwner(request.resource.data.userId); // User can only create for themselves
      allow read, update, list: if allowAllAuthenticated();
      allow delete: if false; // Maintain history
     }
    
    match /bets/{betId} {
      // Any authenticated user can manage bets.
      allow read, write, list: if allowAllAuthenticated();
      allow delete: if false; // Maintain history
    }

    match /game_rounds/{gameId} {
      // Any authenticated user can read or write game results.
      allow read, write: if allowAllAuthenticated();
    }
  }
}
