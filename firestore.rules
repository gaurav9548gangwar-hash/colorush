
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /deposits/{depositId} {
      // Admin can read/write all deposits.
      // Users are restricted to their own by the queries in the app.
      allow read, write: if true;
    }

    match /withdrawals/{withdrawalId} {
      // Admin can read/write all withdrawals.
      // Users are restricted to their own by the queries in the app.
      allow read, write: if true;
    }

    match /users/{userId} {
      // Allow admin to list all users for the management panel.
      allow list: if true;
      // A user can create their own profile.
      allow create: if isOwner(userId);
      // A user can only read and update their own profile (e.g. balance)
      allow read, update, delete: if isOwner(userId);
    }
    
    match /users/{userId}/bets/{betId} {
      // A user can manage their own bets.
      allow read, create, update, delete: if isOwner(userId);
    }
    
    match /game_rounds/{gameId} {
      // Game rounds are public information.
      allow read: if true;
      // In a production app, writes should be locked down to a trusted server.
      allow write: if false;
    }

    // --- Legacy/Unused collections. Block all access. ---
    match /roles_admin/{adminId} {
      allow read, write: if false;
    }
  }
}
