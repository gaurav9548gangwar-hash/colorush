
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin custom claim
    function isAdmin() {
      // Check if the 'isAdmin' custom claim is present and set to true
      return request.auth.token.isAdmin == true;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection rules
    match /users/{userId} {
      // Admin can list all users for the admin panel
      allow list: if isAdmin();
      // A user can get their own document, or an admin can get any document
      allow get: if isOwner(userId) || isAdmin();
      // Allow user creation (write) for anyone who is creating their own user doc
      allow create: if isOwner(userId);
      // Allow updates only for the owner or an admin
      allow update: if isOwner(userId) || isAdmin();
      // Only admin can delete a user document
      allow delete: if isAdmin();
    }
    
    // Bets: Users can create and read their own bets. Admin can read any bet and manage all.
    match /bets/{betId} {
      allow list: if isAdmin();
      allow get: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow create: if request.resource.data.userId == request.auth.uid;
      // Only admin can update or delete bet records directly. Payouts are handled by game logic.
      allow update, delete: if isAdmin();
    }

    // Game Rounds: Authenticated users can read game results. Only admin can write them.
    // This prevents players from manipulating game outcomes.
    match /game_rounds/{roundId} {
      allow list: if request.auth != null;
      allow get: if request.auth != null;
      allow write: if isAdmin();
    }

    // Deposits: Users can create/read their own deposit requests. Admin can manage all.
    match /deposits/{depositId} {
      allow list: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow get: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow create: if request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Withdrawals: Users can create/read their own withdrawal requests. Admin can manage all.
    match /withdrawals/{withdrawalId} {
      allow list: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow get: if isAdmin() || (resource.data.userId == request.auth.uid);
      allow create: if request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    
    // Notifications: Can be read by any authenticated user, but only created/managed by an admin.
    match /notifications/{notificationId} {
        allow list: if request.auth != null;
        allow get: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

  }
}
